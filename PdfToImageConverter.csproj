
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net481;net8.0</TargetFrameworks>
    <RootNamespace>PdfToImageConverter</RootNamespace>
    <AssemblyName>PdfToImageConverter</AssemblyName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>PdfToImageConverter.snk</AssemblyOriginatorKeyFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DelaySign>true</DelaySign>
    <LangVersion>latest</LangVersion>
    <AssemblyTitle>PdfToImageConverter</AssemblyTitle>
    <Description>PDF to Image Converter Cross-Platform Library</Description>
    <Company>YuSeok Kim</Company>
    <Product>PdfToImageConverter</Product>
    <Copyright>Copyright Â© 2025</Copyright>
    <Trademark>YuSeok Kim</Trademark>
    <ComVisible>true</ComVisible>
    <Guid>7402F27D-79BB-44EA-92B4-B6492F74C6EC</Guid>
    <AssemblyVersion>1.3.2</AssemblyVersion>
    <FileVersion>1.3.2</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PDFtoImage" Version="5.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net481'">
    <Reference Include="System.Drawing" />      
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="System.Drawing.Common" Version="9.0.7" />
  </ItemGroup>

  <!-- Windows-specific configuration for .NET Framework and COM support -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net481'">
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <ComVisible>true</ComVisible>
    <DelaySign>true</DelaySign>
  </PropertyGroup>

  <!-- Cross-platform configuration for .NET 8 -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <!-- Default to current platform, can be overridden at build time -->
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == '' AND $([MSBuild]::IsOSPlatform('Windows'))">win-x64</RuntimeIdentifier>
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == '' AND $([MSBuild]::IsOSPlatform('OSX'))">osx-x64</RuntimeIdentifier>
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == '' AND $([MSBuild]::IsOSPlatform('Linux'))">linux-x64</RuntimeIdentifier>
    <!-- For Apple Silicon Macs -->
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == 'osx-x64' AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'Arm64'">osx-arm64</RuntimeIdentifier>
    <ComVisible Condition="'$(RuntimeIdentifier)' == 'win-x64' OR '$(RuntimeIdentifier)' == 'win-x86'">true</ComVisible>
    <ComVisible Condition="'$(RuntimeIdentifier)' != 'win-x64' AND '$(RuntimeIdentifier)' != 'win-x86'">false</ComVisible>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <!-- Additional packages for macOS support -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0' AND ('$(RuntimeIdentifier)' == 'osx-x64' OR '$(RuntimeIdentifier)' == 'osx-arm64')">
    <PackageReference Include="SkiaSharp.NativeAssets.macOS" Version="3.119.0" />
  </ItemGroup>

  <!-- Additional packages for Linux support -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0' AND '$(RuntimeIdentifier)' == 'linux-x64'">
    <PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="3.119.0" />
  </ItemGroup>

</Project> 